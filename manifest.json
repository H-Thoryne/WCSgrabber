{
  "name": "WCS Unique ID",
  "version": "1.0",
  "description": "Get the unselectable Unique ID on your clipboard!",
  "permissions": ["activeTab", "declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "uniqueid_16.png",
      "48": "uniqueid_48.png",
      "128": "uniqueid_128.png"
    }
  },
  "icons": {
    "16": "uniqueid_16.png",
    "48": "uniqueid_48.png",
    "128": "uniqueid_128.png"
  },
  "manifest_version": 2
}